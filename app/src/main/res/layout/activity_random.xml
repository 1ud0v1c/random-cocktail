<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.RandomActivity"
        android:padding="@dimen/activity_little_margin">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
                android:id="@+id/text_view_drink_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="@dimen/random_activity_drink_name"/>

        <ImageView
                android:id="@+id/image_view_drink_image"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/random_activity_drink_image"
                android:layout_marginTop="@dimen/activity_margin"/>

        <TextView
                android:id="@+id/text_view_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_random_ingredients_title"
                android:textSize="@dimen/random_activity_title_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_margin" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_little_margin"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/random_activity_separator_height"
            android:background="@color/material_color_grey_400"
            android:layout_marginTop="@dimen/activity_margin" />

        <TextView
                android:id="@+id/text_view_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_random_instructions_title"
                android:textSize="@dimen/random_activity_title_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/activity_margin" />

        <TextView
                android:id="@+id/text_view_drink_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_little_margin"
                android:layout_marginBottom="@dimen/activity_little_margin" />

    </LinearLayout>

</ScrollView>